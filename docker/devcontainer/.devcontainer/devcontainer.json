{
	"name": "Kaldi + SRILM",
	"dockerComposeFile": ["docker-compose.yml"],
	"service": "kaldi-dev",
	"shutdownAction": "stopCompose",
	"workspaceFolder": "/workspaces/kaldi/",

	"settings": {},

	"extensions": [
		"ms-vscode.cpptools",
		"dbaeumer.vscode-eslint"  // Keep or modify extensions based on your needs
	],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "chmod +x /mhscripts/*.sh && /mhscripts/nb7_setup_kaldi.sh",

	"remoteUser": "root"
}
